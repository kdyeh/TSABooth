<% title "Task" %>

<p>
  <strong>Name:</strong>
  <%=h @task.name %>
</p>
<p>
  <strong>Description:</strong>
  <%=h @task.description %>
</p>
<p>
  <strong>Value:</strong>
  <%=h @task.value %>
</p>

<p>
  <%= link_to "Edit", edit_task_path(@task) %> |
  <%= link_to "Destroy", @task, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", tasks_path %>
</p>
